{
  "exa_search": {
    "config": {
      "command": "npx",
      "args": ["-y", "exa-mcp-server"],
      "env": {"EXA_API_KEY": "${EXA_API_KEY}"}
    },
    "tools": [
      {"name": "web_search_exa", "description": "Search the web using Exa AI", "inputSchema": {"type": "object", "properties": {"query": {"type": "string"}}, "required": ["query"]}},
      {"name": "get_code_context_exa", "description": "Get code context for programming tasks", "inputSchema": {"type": "object", "properties": {"query": {"type": "string"}}, "required": ["query"]}}
    ]
  },
  "fetch": {
    "config": {
      "command": "npx",
      "args": ["-y", "@tokenizin/mcp-npx-fetch"],
      "env": {}
    },
    "tools": [
      {"name": "fetch_txt", "description": "Fetch URL as plain text", "inputSchema": {"type": "object", "properties": {"url": {"type": "string"}}, "required": ["url"]}},
      {"name": "fetch_html", "description": "Fetch URL as HTML", "inputSchema": {"type": "object", "properties": {"url": {"type": "string"}}, "required": ["url"]}},
      {"name": "fetch_json", "description": "Fetch URL as JSON", "inputSchema": {"type": "object", "properties": {"url": {"type": "string"}}, "required": ["url"]}},
      {"name": "fetch_markdown", "description": "Fetch URL as Markdown", "inputSchema": {"type": "object", "properties": {"url": {"type": "string"}}, "required": ["url"]}}
    ]
  },
  "playwright": {
    "config": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"],
      "env": {}
    },
    "tools": [
      {"name": "browser_navigate", "description": "Navigate to URL", "inputSchema": {"type": "object", "properties": {"url": {"type": "string"}}, "required": ["url"]}},
      {"name": "browser_click", "description": "Click element", "inputSchema": {"type": "object"}},
      {"name": "browser_type", "description": "Type text into element", "inputSchema": {"type": "object"}},
      {"name": "browser_snapshot", "description": "Get page accessibility snapshot", "inputSchema": {"type": "object"}},
      {"name": "browser_take_screenshot", "description": "Take screenshot", "inputSchema": {"type": "object"}},
      {"name": "browser_fill_form", "description": "Fill form fields", "inputSchema": {"type": "object"}},
      {"name": "browser_select_option", "description": "Select dropdown option", "inputSchema": {"type": "object"}},
      {"name": "browser_hover", "description": "Hover over element", "inputSchema": {"type": "object"}},
      {"name": "browser_drag", "description": "Drag and drop", "inputSchema": {"type": "object"}},
      {"name": "browser_press_key", "description": "Press keyboard key", "inputSchema": {"type": "object"}},
      {"name": "browser_wait_for", "description": "Wait for condition", "inputSchema": {"type": "object"}},
      {"name": "browser_evaluate", "description": "Evaluate JavaScript", "inputSchema": {"type": "object"}},
      {"name": "browser_run_code", "description": "Run Playwright code", "inputSchema": {"type": "object"}},
      {"name": "browser_close", "description": "Close browser", "inputSchema": {"type": "object"}},
      {"name": "browser_navigate_back", "description": "Go back", "inputSchema": {"type": "object"}},
      {"name": "browser_file_upload", "description": "Upload files", "inputSchema": {"type": "object"}},
      {"name": "browser_handle_dialog", "description": "Handle dialog", "inputSchema": {"type": "object"}},
      {"name": "browser_tabs", "description": "Manage tabs", "inputSchema": {"type": "object"}},
      {"name": "browser_resize", "description": "Resize window", "inputSchema": {"type": "object"}},
      {"name": "browser_console_messages", "description": "Get console messages", "inputSchema": {"type": "object"}},
      {"name": "browser_network_requests", "description": "Get network requests", "inputSchema": {"type": "object"}},
      {"name": "browser_install", "description": "Install browser", "inputSchema": {"type": "object"}}
    ]
  },
  "sequential_thinking": {
    "config": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "env": {}
    },
    "tools": [
      {"name": "sequentialthinking", "description": "Dynamic problem-solving through structured thinking steps", "inputSchema": {"type": "object", "properties": {"thought": {"type": "string"}, "thoughtNumber": {"type": "integer"}, "totalThoughts": {"type": "integer"}, "nextThoughtNeeded": {"type": "boolean"}}, "required": ["thought", "thoughtNumber", "totalThoughts", "nextThoughtNeeded"]}}
    ]
  },
  "desktop_commander": {
    "config": {
      "command": "npx",
      "args": ["-y", "@wonderwhy-er/desktop-commander@latest"],
      "env": {}
    },
    "tools": [
      {"name": "get_config", "description": "Get the complete server configuration as JSON", "inputSchema": {"type": "object", "properties": {}, "required": []}},
      {"name": "set_config_value", "description": "Set a specific configuration value by key (blockedCommands, defaultShell, allowedDirectories, fileReadLineLimit, fileWriteLineLimit, telemetryEnabled)", "inputSchema": {"type": "object", "properties": {"key": {"type": "string"}, "value": {}}, "required": ["key", "value"]}},
      {"name": "start_process", "description": "Start a terminal process with smart detection of when ready for input", "inputSchema": {"type": "object", "properties": {"command": {"type": "string"}, "timeout_ms": {"type": "number"}, "shell": {"type": "string"}}, "required": ["command", "timeout_ms"]}},
      {"name": "interact_with_process", "description": "Send commands to running processes and get responses", "inputSchema": {"type": "object", "properties": {"pid": {"type": "number"}, "input": {"type": "string"}}, "required": ["pid", "input"]}},
      {"name": "read_process_output", "description": "Read output from running processes", "inputSchema": {"type": "object", "properties": {"pid": {"type": "number"}, "timeout_ms": {"type": "number"}}, "required": ["pid"]}},
      {"name": "force_terminate", "description": "Force terminate a running terminal session", "inputSchema": {"type": "object", "properties": {"pid": {"type": "number"}}, "required": ["pid"]}},
      {"name": "list_sessions", "description": "List all active terminal sessions", "inputSchema": {"type": "object", "properties": {}, "required": []}},
      {"name": "list_processes", "description": "List all running processes with detailed information", "inputSchema": {"type": "object", "properties": {}, "required": []}},
      {"name": "kill_process", "description": "Terminate a running process by PID", "inputSchema": {"type": "object", "properties": {"pid": {"type": "number"}}, "required": ["pid"]}},
      {"name": "read_file", "description": "Read file contents from filesystem or URL with offset/length pagination", "inputSchema": {"type": "object", "properties": {"path": {"type": "string"}, "isUrl": {"type": "boolean"}, "offset": {"type": "number"}, "length": {"type": "number"}}, "required": ["path"]}},
      {"name": "read_multiple_files", "description": "Read multiple files simultaneously", "inputSchema": {"type": "object", "properties": {"paths": {"type": "array", "items": {"type": "string"}}}, "required": ["paths"]}},
      {"name": "write_file", "description": "Write file contents with rewrite or append mode", "inputSchema": {"type": "object", "properties": {"path": {"type": "string"}, "content": {"type": "string"}, "mode": {"type": "string", "enum": ["rewrite", "append"]}}, "required": ["path", "content"]}},
      {"name": "create_directory", "description": "Create a new directory or ensure it exists", "inputSchema": {"type": "object", "properties": {"path": {"type": "string"}}, "required": ["path"]}},
      {"name": "list_directory", "description": "Get detailed recursive listing of files and directories", "inputSchema": {"type": "object", "properties": {"path": {"type": "string"}, "depth": {"type": "number"}}, "required": ["path"]}},
      {"name": "move_file", "description": "Move or rename files and directories", "inputSchema": {"type": "object", "properties": {"source": {"type": "string"}, "destination": {"type": "string"}}, "required": ["source", "destination"]}},
      {"name": "get_file_info", "description": "Retrieve detailed metadata about a file or directory", "inputSchema": {"type": "object", "properties": {"path": {"type": "string"}}, "required": ["path"]}},
      {"name": "start_search", "description": "Start streaming search for files by name or content patterns (ripgrep-based)", "inputSchema": {"type": "object", "properties": {"pattern": {"type": "string"}, "path": {"type": "string"}, "type": {"type": "string", "enum": ["content", "filename"]}}, "required": ["pattern", "path"]}},
      {"name": "get_more_search_results", "description": "Get paginated results from active search with offset support", "inputSchema": {"type": "object", "properties": {"searchId": {"type": "string"}, "offset": {"type": "number"}}, "required": ["searchId"]}},
      {"name": "stop_search", "description": "Stop an active search gracefully", "inputSchema": {"type": "object", "properties": {"searchId": {"type": "string"}}, "required": ["searchId"]}},
      {"name": "list_searches", "description": "List all active search sessions", "inputSchema": {"type": "object", "properties": {}, "required": []}},
      {"name": "edit_block", "description": "Apply surgical text replacements with character-level diff feedback", "inputSchema": {"type": "object", "properties": {"file_path": {"type": "string"}, "old_string": {"type": "string"}, "new_string": {"type": "string"}}, "required": ["file_path", "old_string", "new_string"]}},
      {"name": "get_usage_stats", "description": "Get usage statistics for debugging and analysis", "inputSchema": {"type": "object", "properties": {}, "required": []}},
      {"name": "get_recent_tool_calls", "description": "Get recent tool call history with arguments and outputs", "inputSchema": {"type": "object", "properties": {"maxResults": {"type": "number"}, "toolName": {"type": "string"}}, "required": []}}
    ]
  }
}
