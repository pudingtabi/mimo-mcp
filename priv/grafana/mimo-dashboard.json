{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "title": "Mimo MCP Production Dashboard",
  "uid": "mimo-mcp-prod",
  "version": 1,
  "panels": [
    {
      "title": "Memory Usage (MB)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "mimo_memory_total_mb",
          "legendFormat": "Total Memory"
        },
        {
          "expr": "mimo_memory_processes_mb",
          "legendFormat": "Process Memory"
        },
        {
          "expr": "mimo_memory_binary_mb",
          "legendFormat": "Binary Memory"
        },
        {
          "expr": "mimo_memory_ets_mb",
          "legendFormat": "ETS Memory"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 500, "color": "yellow" },
              { "value": 1000, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "title": "Process & Port Count",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "mimo_process_count",
          "legendFormat": "Processes"
        },
        {
          "expr": "mimo_port_count",
          "legendFormat": "Ports"
        },
        {
          "expr": "mimo_skills_active",
          "legendFormat": "Active Skills"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 400, "color": "yellow" },
              { "value": 500, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "title": "Circuit Breaker Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "mimo_circuit_breaker_status{service=\"llm_service\"}",
          "legendFormat": "LLM Service"
        },
        {
          "expr": "mimo_circuit_breaker_status{service=\"ollama\"}",
          "legendFormat": "Ollama"
        },
        {
          "expr": "mimo_circuit_breaker_status{service=\"database\"}",
          "legendFormat": "Database"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "CLOSED", "color": "green" } } },
            { "type": "value", "options": { "1": { "text": "HALF_OPEN", "color": "yellow" } } },
            { "type": "value", "options": { "2": { "text": "OPEN", "color": "red" } } }
          ]
        }
      }
    },
    {
      "title": "Fallback Events",
      "type": "timeseries",
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 8 },
      "targets": [
        {
          "expr": "rate(mimo_fallback_triggered_total[5m])",
          "legendFormat": "{{service}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 1, "color": "yellow" },
              { "value": 5, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "title": "Request Latency (p95)",
      "type": "timeseries",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(mimo_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95 Latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 0.5, "color": "yellow" },
              { "value": 1, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "title": "Top 10 ETS Tables by Size",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "topk(10, mimo_ets_table_size)",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "color-background"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 5000, "color": "yellow" },
              { "value": 10000, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "title": "Semantic Store Operations",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "rate(mimo_semantic_query_total[5m])",
          "legendFormat": "Queries"
        },
        {
          "expr": "rate(mimo_semantic_ingest_total[5m])",
          "legendFormat": "Ingestions"
        },
        {
          "expr": "rate(mimo_semantic_inference_total[5m])",
          "legendFormat": "Inferences"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    },
    {
      "title": "MCP Tool Calls",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "rate(mimo_tool_calls_total[5m])",
          "legendFormat": "{{tool}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    },
    {
      "title": "Error Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "targets": [
        {
          "expr": "rate(mimo_errors_total[5m])",
          "legendFormat": "{{type}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 0.1, "color": "yellow" },
              { "value": 1, "color": "red" }
            ]
          }
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(mimo_memory_total_mb, instance)",
        "refresh": 1
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}
